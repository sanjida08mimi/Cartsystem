@model List<CartSystem.Models.Domain.CartItem>
@{
}
<div class="container">
	<div class="row">
        <div class="col-6">
            <h3 class="p-3 bg-black text-white">Your Cart Items</h3>
           @if(Model!=null && Model.Any())
           {
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Colour</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Action</th>



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cartitem in Model)
                        {
                            <tr>
                                <td scope="col">@cartitem.Id</td>
                                <td scope="col">@cartitem.Colour</td>
                                <td scope="col">@cartitem.Quantity</td>
                                <td scope="col">
                                    <a class="btn btn-light"
                                    asp-controller="AdminOrder" asp-action="Edit"
                                asp-route-id="@cartitem.Id">Edit</a> </td>


                            </tr>
                        }

                    </tbody>
                </table>
           }
            else{
                <p> No Item on Cart</p>
            }
		</div>
	</div>
</div>